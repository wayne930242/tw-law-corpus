{
  "status": "廢止",
  "name": "名譽博士學位授予條例",
  "revision": [
    {
      "date": "1960.4.22",
      "content": {
        "1": {
          "num": 1,
          "zh": "第一條",
          "article": "本條例依學位授予法第十一條之規定制定之。"
        },
        "2": {
          "num": 2,
          "zh": "第二條",
          "article": "名譽博士學位分左列三種：一、文學博士。二、理學博士。三、法學博士。"
        },
        "3": {
          "num": 3,
          "zh": "第三條",
          "article": "名譽博士學位，由教育部指定歷史悠久成績優異並設有研究院所之大學授予之。"
        },
        "4": {
          "num": 4,
          "zh": "第四條",
          "article": "名譽博士學位之授予，由大學校長提經校務會議通過，呈經教育部審定後行之。"
        },
        "5": {
          "num": 5,
          "zh": "第五條",
          "article": "國內外人士具有左列條件之一者，得為名譽博士學位候選人：一、在學術上有特殊著作或發明者。二、對人類幸福世界和平有特殊貢獻者。"
        },
        "6": {
          "num": 6,
          "zh": "第六條",
          "article": "本條例施行細則由教育部定之。"
        },
        "7": {
          "num": 7,
          "zh": "第七條",
          "article": "本條例自公布日施行。"
        }
      }
    }
  ]
}